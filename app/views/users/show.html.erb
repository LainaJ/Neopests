<main>
<div class="row">
    <div class="pest-column" style="background-color:#aaa;">
        <h1>Primary Pest</h1>
        <%  if @user.primary_pest_id == nil %>
            <p>You have no primary pests assigned. Please add primary pests.</p>
        <%  else %> 
            <% primary_pest = @user.pests.find do |p| %> 
                <%  p.id == @user.primary_pest_id %>
                <% end %>
        <%= primary_pest.name %>
        <%= image_tag "#{primary_pest.species}_#{primary_pest.color}", class: "pest-size"%>
        <% end %>

    </div>
    <div class="main-column" style="background-color:#bbb;">
        <h1> Welcome to <%= @user.username %>'s page! </h1>
        <p>About Me</p><br>
        <p> Username: <%= @user.username %> </p><br>
        <p> Email: <%= @user.email %> </p><br>
        
        
        <%= link_to "View My Pests", user_pests_path(@user.id) %><br>
        <%= link_to "Edit My Account", edit_user_path(@user) %><br>
        <%= link_to "Delete My Account", user_path(@user), method: "delete" %><br>
        <%= link_to "Home", welcome_path %>
    </div>
</div>
</main>



